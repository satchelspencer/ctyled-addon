{
  "compilerOptions": {
    "baseUrl": "src",
    "lib": ["es6", "es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitReturns": true,
    "outDir": "dist",
    "target": "es5",
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["**/node_modules", "**/dist"],
  "include": ["./src"],
  "compileOnSave": true
}
